# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL="postgresql://user:password@localhost:5432/streamflow?schema=public"

# ============================================================================
# UNIFIED AUTHENTICATION SYSTEM
# ============================================================================

# --- Provider/Developer Authentication (System-Level) ---
# Option 1: Set specific credentials (PRODUCTION)
# PROVIDER_USERNAME=admin@company.com
# PROVIDER_PASSWORD=<strong-password-here>
# DEVELOPER_USERNAME=dev@company.com
# DEVELOPER_PASSWORD=<strong-password-here>

# Option 2: Breakglass emergency credentials (PRODUCTION - use only if DB down)
# PROVIDER_BREAKGLASS_EMAIL=emergency-provider@company.com
# PROVIDER_BREAKGLASS_PASSWORD=<different-strong-password>
# DEVELOPER_BREAKGLASS_EMAIL=emergency-dev@company.com
# DEVELOPER_BREAKGLASS_PASSWORD=<different-strong-password>

# Option 3: Dev escape hatches (DEVELOPMENT ONLY - NEVER in production!)
# DEV_ACCEPT_ANY_PROVIDER_LOGIN=true
# DEV_ACCEPT_ANY_DEVELOPER_LOGIN=true

# --- Client-Side Authentication (Tenant/Accountant/Vendor) ---
# Test credentials (optional - for development)
# TENANT_LOGIN_EMAIL=owner@test.com
# TENANT_LOGIN_PASSWORD=test123

# Dev escape hatches (DEVELOPMENT ONLY - NEVER in production!)
# DEV_ACCEPT_ANY_TENANT_LOGIN=true
# DEV_ACCEPT_ANY_ACCOUNTANT_LOGIN=true
# DEV_ACCEPT_ANY_VENDOR_LOGIN=true

# --- Encryption & Security ---
# Master encryption key for breakglass account encryption (REQUIRED in production)
# Generate with: openssl rand -hex 32
# BREAKGLASS_MASTER_KEY=<generate-with-openssl>

# --- Email Service (for password resets) ---
# EMAIL_SERVICE_API_KEY=<your-api-key>
# EMAIL_FROM=noreply@yourdomain.com
# EMAIL_FROM_NAME=Robinson Solutions

# --- SMS Service (optional - for SMS verification) ---
# SMS_SERVICE_API_KEY=<your-api-key>
# SMS_FROM=+1234567890

# ============================================================================
# FEDERATION
# ============================================================================
FED_ENABLED=false
FED_OIDC_ENABLED=false

# OIDC Configuration (when FED_OIDC_ENABLED=true)
# OIDC_PROVIDER_ISSUER=https://your-idp.example.com
# OIDC_CLIENT_ID=your-client-id
# OIDC_CLIENT_SECRET=your-client-secret
# OIDC_REDIRECT_URI=https://your-app.vercel.app/api/auth/oidc/callback
# OIDC_SCOPE=openid profile email

# ============================================================================
# RATE LIMITING & SECURITY
# ============================================================================
# RATE_LIMIT_API_PER_MINUTE=60
# RATE_LIMIT_AUTH_PER_MINUTE=20
# RATE_LIMIT_RECOVERY_PER_HOUR=5

# ============================================================================
# OTHER
# ============================================================================
# IDEMPOTENCY_TTL_MINUTES=1440
